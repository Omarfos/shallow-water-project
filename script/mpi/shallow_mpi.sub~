#!/bin/bash
#SBATCH -J shallow
#SBATCH -o results/mpi/shallow_mpi.out
#SBATCH -e results/mpi/shallow_mpi.err
#SBATCH --nodes=2 
#SBATCH --ntasks=2 
#SBATCH --tasks-per-node=1 
#SBATCH --cpus-per-task=1 
#SBATCH --get-user-env 
#SBATCH -t 00:10:00 
#SBATCH --mem-per-cpu=1000 
#SBATCH --partition=cs5220 

source /etc/profile.d/modules.sh 
module load openmpi-4.0.0 
cd $HOME/projects/CS5220/shallow-water-project 
mpirun -n 2 src/lshallow tests.lua dam 400 2 200
